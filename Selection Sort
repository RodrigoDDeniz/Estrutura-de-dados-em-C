#include <stdio.h>

// Selection Sort
void selectionSort(int arr[], int n) {
    int i, j, min_idx, temp;
    
    for (i = 0; i < n-1; i++) {
        // Encontra o menor número no array não ordenado
        min_idx = i;
        for (j = i+1; j < n; j++) {
            if (arr[j] < arr[min_idx]) {
                min_idx = j;
            }
        }
        
        // Troca o menor número encontrado com o primeiro da parte não ordenada
        temp = arr[min_idx];
        arr[min_idx] = arr[i];
        arr[i] = temp;
    }
}

// Função para imprimir o array
void printArray(int arr[], int n) {
    for (int i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");
}

int main() {
    int n;

    printf("Digite o tamanho do array: ");
    scanf("%d", &n);

    if (n < 1) {
        printf("Tamanho inválido! O tamanho deve ser maior que 0.\n");
        return 1;
    }

    int arr[n]; // agora o tamanho depende do usuário (VLA)

    printf("Digite %d números:\n", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    printf("Array original: ");
    printArray(arr, n);

    selectionSort(arr, n);

    printf("Array ordenado (Selection Sort): ");
    printArray(arr, n);

    return 0;
}
